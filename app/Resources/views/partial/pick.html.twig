<div class="well">
    <fieldset class="form-group">
        <label class="col-sm-2 control-label">
            Source
        </label>
        <div class="col-sm-4">
            <select class="form-control" data-bind="foreach: lineSources">
                <option data-bind="
                    text: name,
                    attr: {
                        value: id
                    }
                "></option>
            </select>
        </div>
    </fieldset>

    <fieldset class="form-group">
        <label class="col-sm-2 control-label">
            Team #1
        </label>
        <div class="col-sm-4">
            <input class="form-control"></input>
        </div>
        <label class="col-sm-2 control-label">
            Team #2
        </label>
        <div class="col-sm-4">
            <input class="form-control"></input>
        </div>
    </fieldset>

    <fieldset class="form-group">
        <label class="col-sm-2 control-label">
            Type
        </label>
        <div class="col-sm-4">
            <div class="btn-group" role="group" aria-label="...">
                <button type="button" class="btn btn-default">Over/under</button>
                <button type="button" class="btn btn-default">Spread</button>
            </div>
        </div>
        <label class="col-sm-2 control-label">
            Value
        </label>
        <div class="col-sm-4">
            <div class="btn-group" role="group" aria-label="...">
                <input type="number" class="form-control" step="0.5" value="0">
            </div>
        </div>
    </fieldset>
</div>
