<div class="pick">
    <div class="col-sm-2 pick-number">
        <h2><small>Pick</small> {{ pick_number }}</h2>
    </div>

    <div class="col-sm-10">
        <fieldset class="form-group">
            <div class="col-sm-12 col-md-6">
                <input class="form-control" placeholder="Away Team"></input>
            </div>
            <div class="col-sm-12 col-md-6">
                <input class="form-control" placeholder="Home Team"></input>
            </div>
        </fieldset>

        <fieldset class="form-group">
            <div class="col-xs-12 col-sm-6 col-md-4">
                <div class="btn-group" role="group" aria-label="...">
                    <button type="button" class="btn btn-default">Over</button>
                    <button type="button" class="btn btn-default active">Under</button>
                    <button type="button" class="btn btn-default">Spread</button>
                </div>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-4">
                <input type="number" class="form-control" step="0.5" placeholder="Value">
            </div>
        </fieldset>
    </div>
    <div class="clearfix"></div>
</div>
