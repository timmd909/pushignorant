{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
	<h1>Submit Your Picks</h1>

  <form class="form-horizontal">

    <div class="panel panel-default">
      <div class="panel-heading">Your information</div>
      <div class="panel-body">

        <fieldset class="form-group">
          <label class="col-sm-3 control-label">First Name</label>
          <div class="col-sm-9">
            <input class="form-control" type="text" minlength="1" placeholder="First Name">
          </div>
        </fieldset>
        <fieldset class="form-group">
          <label class="col-sm-3 control-label">Last Name</label>
          <div class="col-sm-9">
            <input class="form-control" type="text" minlength="1" placeholder="Last Name">
          </div>
        </fieldset>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">Your picks</div>
      <div class="panel-body">
        <div class="pick">
          {% include 'partial/pick.html.twig' %}
        </div>
      </div>
    </div>

    <div class="text-right">
      <button class="btn btn-primary" type="submit">Submit</button>
    </div>

  </form>

</div>
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
{% endblock %}

{% block javascripts_main %}
	<script src="{{ asset('js/submit-picks.js') }}"></script>
{% endblock %}
